// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id      Int           @id @default(autoincrement())
  name    String        @unique
  entries RaffleEntry[]
  raffles Raffle[]
  Image   Image[]
}

model Raffle {
  id          Int           @id @default(autoincrement())
  prize       String
  entries     RaffleEntry[]
  winner      User?         @relation(fields: [winnerId], references: [id])
  winnerId    Int?
  photoMosaic PhotoMosaic[]
}

model RaffleEntry {
  user     User   @relation(fields: [userId], references: [id])
  userId   Int
  raffle   Raffle @relation(fields: [raffleId], references: [id])
  raffleId Int

  @@id([userId, raffleId])
}

model Image {
  id            Int          @id @default(autoincrement())
  filename      String
  path          String
  user          User         @relation(fields: [userId], references: [id])
  userId        Int
  photoMosaic   PhotoMosaic? @relation(fields: [photoMosaicId], references: [id])
  photoMosaicId Int?
}

model PhotoMosaic {
  id        Int     @id @default(autoincrement())
  targetFilename  String?
  targetPath      String?
  mosaicFilename  String?
  mosaicPath      String?
  eventName String
  raffle    Raffle? @relation(fields: [raffleId], references: [id])
  raffleId  Int?
  images    Image[]
}
